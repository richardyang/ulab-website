- if @conference.errors.any?
  - content_for :notifications do
    .notification.notification-danger.animated.fadeInRight
      = icon('exclamation')
      .notification-message
        =t 'spina.notifications.alert'
        %small= @conference.errors.full_messages.join('<br />').html_safe
      = link_to '#', data: {close_notification: true} do
        = icon('cross')

= form_for [:admin, @conference], html: {autocomplete: "off"} do |f|
  %header#header
    = render partial: 'spina/admin/shared/breadcrumbs'

    #header_actions
      %button.button.button-primary{type: 'submit'}
        = icon('check')
        =t 'spina.conferences.save'

      = link_to t('spina.cancel'), spina.admin_conferences_path, class: 'button', style: 'margin-right: 0'

  .well
    .horizontal-form
      .horizontal-form-group
        .horizontal-form-label
          = Spina::Conference.human_attribute_name :institution
        .horizontal-form-content
          = f.text_field :institution, placeholder: Spina::Conference.human_attribute_name(:institution), required: true

      .horizontal-form-group
        .horizontal-form-label
          = Spina::Conference.human_attribute_name :city
        .horizontal-form-content
          = f.text_field :city, placeholder: Spina::Conference.human_attribute_name(:city), required: true

      .horizontal-form-group
        .horizontal-form-label
          = Spina::Conference.human_attribute_name :start_date
        .horizontal-form-content
          = f.date_field :start_date, value: (@conference.start_date.strftime("%Y-%m-%d") unless @conference.start_date.blank?), class: 'datepicker', placeholder: Spina::Conference.human_attribute_name(:start_date), required: true

      .horizontal-form-group
        .horizontal-form-label
          = Spina::Conference.human_attribute_name :finish_date
        .horizontal-form-content
          = f.date_field :finish_date, value: (@conference.finish_date.strftime("%Y-%m-%d") unless @conference.finish_date.blank?), class: 'datepicker', placeholder: Spina::Conference.human_attribute_name(:finish_date), required: true

  - unless @conference.new_record?
    .pull-right= link_to t('spina.permanently_delete'), admin_conference_path(@conference), method: :delete, data: {confirm: t('spina.conferences.delete_confirmation', conference: "#{@conference.institution} #{@conference.start_date.year}")}, class: 'button button-link button-danger'
