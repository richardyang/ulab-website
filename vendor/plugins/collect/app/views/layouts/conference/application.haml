!!!
%html
  %head
    %title= "#{current_page.seo_title} â€” #{current_account.name}"
    %meta{charset: 'utf-8'}
    %meta{name: 'description', content: current_page.description}
    %meta{name: 'viewport', content: 'initial-scale=1.0, user-scalable=no, width=device-width'}
    = render 'spina/shared/google_site_verification'
    = stylesheet_link_tag    "#{current_theme.name}/application", media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag "#{current_theme.name}/application", 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header
      = render 'spina/shared/admin_bar'
    %main
      .sidebar
        %h2= current_account.name
        = render "#{current_theme.name}/shared/navigation"
      .content
        %ol.breadcrumb
          - current_page.ancestors.each do |ancestor|
            %li
              = link_to ancestor.menu_title, ancestor.materialized_path
          %li.active
            %a= current_page.menu_title
        %h1= current_page.title
        = yield
    = spina_link
    = render 'spina/shared/social'
