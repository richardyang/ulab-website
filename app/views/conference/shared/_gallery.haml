- unless content(:gallery)&.images&.empty?
  %figure{ class: :gallery, data: { controller: :slideshow, slideshow: { incrementer: 0 } } }
    .controls
      %button{ data: { action: :'slideshow#previous' } }
        = icon('chevron-left')
      %button{ data: { action: :'slideshow#next' } }
        = icon('chevron-right')
    - content(:gallery)&.images&.each do |image|
      = image_tag main_app.url_for(image.variant(resize: '2160x2160')), data: { target: :'slideshow.slide' }, width: 720, height: 400
