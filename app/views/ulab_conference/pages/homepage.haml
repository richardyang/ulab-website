.flex-auto.d-flex.flex-column
  - cache content(:gallery) do
    = render content(:gallery).images.any? ? content(:gallery) : "#{current_theme.name}/shared/jumbotron", advance: true do
      .py-3.py-lg-6
        - @conference = Spina::Conferences::Conference.sorted.first
        - cache @conference do
          .text-white
            %p.h000-mktg.text-shadow-dark.lh-condensed-ultra= @conference.conference_page.title
            %address.f2-light.text-shadow-dark= @conference.institution.name
            %time.f2-light.text-shadow-dark<
              = time_tag @conference.dates.min, @conference.dates.min.strftime('%d/%m')
              â€“
              = time_tag @conference.dates.max, @conference.dates.max.strftime('%d/%m')
            .markdown-body.my-4.text-shadow-dark= content(:text).try(:html_safe)
            .d-block.mt-4= link_to 'More info', @conference.conference_page.materialized_path, class: %w(btn btn-large f3)
  %footer
    .container-md= render "#{current_theme.name}/shared/footer"
