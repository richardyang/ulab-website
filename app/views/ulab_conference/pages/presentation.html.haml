- content_for :header do
  .pagehead.my-4
    %h1.mb-1= current_page.title
    .text-gray
      - presentation.presenters.includes(:institution).each do |presenter|
        %address= "#{presenter.full_name}, #{presenter.institution.name}"
      = time_tag presentation.start_datetime, l(presentation.start_datetime, format: :short)
      %div= presentation.room_use.room_name

- content_for :content do
  .markdown-body.my-4= presentation.abstract.try(:html_safe)
