- content_for(:header) do
  = render "#{current_theme.name}/shared/title"

= content(:text).try(:html_safe)
- if has_content? :committee_bios
  - unless content(:committee_bios).structure_items.empty?
    %h2 Committee members
    - content(:committee_bios).structure_items.each do |member|
      %article.no-link
        %header
          - if member.has_content? :profile_picture
            %figure
              = image_tag variant(member.content(:profile_picture).file, resize: '600x600'), width: 200, draggable: false, class: :profile_picture
          - if member.has_content? :name
            %h3= member.content(:name)
        - if member.has_content? :bio
          = member.content(:bio).try(:html_safe)
