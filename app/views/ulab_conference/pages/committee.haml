- content_for(:header) do
  = render "#{current_theme.name}/shared/title"
- cache current_page do
  = content(:text).try(:html_safe)
  - if has_content?(:committee_bios) && content(:committee_bios).structure_items.present?
    %h2 Role-holding committee members
    %div
      = render content(:committee_bios) do |bio|
        %article.no-link.figure-left
          %div
            %header
              %h3= bio.content(:name) if bio.has_content? :name
              %h4= bio.content(:role) if bio.has_content? :role
            = bio.content(:bio).try(:html_safe) if bio.has_content? :bio
            - if bio.has_content?(:twitter_profile) || bio.has_content?(:facebook_profile)
              %ul{class: :buttons}
                %li= link_to 'Twitter', bio.content(:twitter_profile), class: :button if bio.has_content? :twitter_profile
                %li= link_to 'Facebook', bio.content(:facebook_profile), class: :button if bio.has_content? :facebook_profile
          %figure= image_tag variant(bio.content(:profile_picture).file, resize: '600x600'), draggable: false, class: :profile_picture if bio.has_content? :profile_picture
