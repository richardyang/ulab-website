- content_for :header do
  .pagehead.my-4
    %h1= current_page.title

- content_for :content do
  - cache current_page do
    .my-4.markdown-body= content(:text).try(:html_safe)

    .clearfix.gutter.mb-n4.mt-n4.my-md-4
      .col-12.col-md-6.float-md-left.my-4.my-md-0= render content(:constitution) || "#{current_theme.name}/shared/empty_list", box: true
      .col-12.col-md-6.float-md-left.my-4.my-md-0= render content(:minutes) || "#{current_theme.name}/shared/empty_list", box: true, list_item_class: %w[flex-items-center d-flex]

    .my-4= render content(:partner_societies), box: true, list_item_class: %w[flex-row-reverse d-md-flex]

    .Subhead.Subhead--spacious
      %h2.Subhead-heading Contact
    .markdown-body.my-4= content(:contact).try(:html_safe)
